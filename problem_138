#include <stdio.h>

int main() {
    char file1[100], file2[100];
    FILE *f1, *f2;
    int ch1, ch2;
    int pos = 1, mismatch = 0;

    printf("Enter first file name: ");
    scanf("%s", file1);
    printf("Enter second file name: ");
    scanf("%s", file2);

    f1 = fopen(file1, "r");
    f2 = fopen(file2, "r");

    if (f1 == NULL || f2 == NULL) {
        printf("Error opening files.\n");
        return 1;
    }

    while(1) {
        ch1 = fgetc(f1);
        ch2 = fgetc(f2);

        if (ch1 == EOF && ch2 == EOF) break;

        if (ch1 != ch2) {
            printf("Mismatch at position %d: '%c' != '%c'\n", pos, ch1, ch2);
            mismatch++;
        }
        pos++;
    }

    if (mismatch == 0)
        printf("Files are identical.\n");
    else
        printf("Total mismatches: %d\n", mismatch);

    fclose(f1);
    fclose(f2);
    return 0;
}
